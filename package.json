  "scripts": {
    "build": "tsc",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "test": "yarn docker:up && yarn prisma migrate deploy && vitest run",
    "test:watch": "yarn docker:up && yarn prisma migrate deploy && vitest",
    "test:coverage": "yarn docker:up && yarn prisma migrate deploy && vitest run --coverage",
    "dev": "tsc --watch",
    "lint": "eslint  --fix --ignore-path .eslintignore --ext .js,.ts .",
    "prepare": "husky install",
    "prisma-concat": "npx ts-node src/infra/database/prisma/concat-schemas.ts && npx prisma format",
    "generate": "yarn prisma-concat && npx prisma generate"
  },
  "prisma": {
    "schema": "src/infra/database/prisma/schema.prisma"
  }
