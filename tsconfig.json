{
  "compilerOptions": {
    "target": "es2017",                                  
    "lib": ["ES6"],                                        
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                         
    "module": "commonjs",                                
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
    ],                                  
    "resolveJsonModule": true,
    "allowJs": true,                                  
    "removeComments": true,                           
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  }
}
